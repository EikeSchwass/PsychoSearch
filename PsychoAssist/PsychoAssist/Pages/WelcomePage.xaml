<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localization="clr-namespace:PsychoAssist.Localization;assembly=PsychoAssist.Android"
             x:Class="PsychoAssist.Pages.WelcomePage">
    <Grid VerticalOptions="Fill">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Grid.Row="1" Source="@drawable/icon" HorizontalOptions="Fill" />
        <Label Grid.Row="2" Text="{localization:Translate welcome}" FontSize="Large" Margin="50,10" />
        <ScrollView Grid.Row="3" Margin="50,0">
            <Label Text="{localization:Translate welcomeText}" />
        </ScrollView>
        <Button Grid.Row="4" Text="{localization:Translate welcomeButton}" HorizontalOptions="Center" Margin="50,10" Clicked="Button_Clicked" />
    </Grid>
</ContentPage>
